# WasTask Environment Configuration

# Application Settings
DEBUG=false
LOG_LEVEL=INFO
SECRET_KEY=your-secret-key-here-change-this-in-production

# Server Settings
HOST=0.0.0.0
PORT=8000
WORKERS=4

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/wastask
DATABASE_ECHO=false
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=3600

# Google ADK Models
ADK_MODEL_DEFAULT=gemini-2.5-pro
ADK_MODEL_COMPLEX=gemini-2.5-pro
ADK_MODEL_SIMPLE=gemini-2.5-flash
ADK_TEMPERATURE=0.1
ADK_MAX_TOKENS=4000

# API Keys for LLM Providers (replace with your actual keys)
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here
GOOGLE_API_KEY=your-google-api-key-here

# GitHub Integration
GITHUB_APP_ID=your-github-app-id
GITHUB_PRIVATE_KEY=your-github-private-key
GITHUB_WEBHOOK_SECRET=your-webhook-secret
GITHUB_DEFAULT_TOKEN=your-personal-access-token

# Security Settings
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
ALLOWED_HOSTS=*
CORS_ORIGINS=*

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Cost Management
COST_OPTIMIZATION_ENABLED=true
MAX_DAILY_COST_USD=50.0
SEMANTIC_CACHE_ENABLED=true
SEMANTIC_CACHE_SIMILARITY_THRESHOLD=0.95

# Monitoring and Telemetry
ENABLE_TELEMETRY=true
SENTRY_DSN=your-sentry-dsn
PROMETHEUS_ENABLED=false

# Agent Configuration
AGENT_SESSION_TIMEOUT=1800
MAX_AGENT_MEMORY=50
AGENT_RETRY_ATTEMPTS=3

# File Upload Settings
UPLOAD_MAX_SIZE=10485760
ALLOWED_FILE_TYPES=txt,md,json,csv,pdf